{% extends "customer/base_customer.html.twig" %}

{% block body %}

    {# PARTIE HEADER #}
    <div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">

        {% for key,category in categories %}

            {% if key is same as 0 %}
                <div class="carousel-item active">
                    <img src="{{ asset(category.imagePath) }}" class="d-block w-100 imageCarroussel" alt="{{ category.name }}">
                    <a class="btn btn-light btn-lg buttonCarroussel" href="{{ path('customer_category_show',{'id':category.id}) }}">Consulter les produits</a>
                </div>
            {% else %}  
                <div class="carousel-item">
                    <img src="{{ asset(category.imagePath) }}" class="d-block w-100 imageCarroussel" alt="{{ category.name }}">
                    <a class="btn btn-light btn-lg buttonCarroussel" href="{{ path('customer_category_show',{'id':category.id}) }}">Consulter les produits</a>
                </div>      
            {% endif %}

        {% endfor %} 

    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
    </div>

    {# PARTIE LISTE PRODUITS #}

    <div class="container py-3">
        <div class="row">
            <div class="col-12 mt-3">
                {% include "customer/shared/_messages_flash.html.twig" %}
            </div>
            <div class="col-12">
                <h3 class="text-center">Les derniers produits</h3>
            </div>
            {% for product in products %}
                <div class="col-sm-12 col-md-6 col-lg-4 mt-3">
                    <div class="card cardProduct">
                        <div class="card-header">
                            <img src="{{ asset(product.imagePath) }}" alt="{{ product.name }}" class="w-100 imageCard">
                        </div>
                        <div class="card-body">
                            <h5 class="text-center">{{ product.name }}</h5>
                            <p class="text-center text-primary">{{ product.price | euroPrice }}</p>
                        </div>
                        <div class="card-footer">
                        <a class="btn btn-info w-100" href="{{ path('customer_product_show',{'id' : product.id }) }}">Consulter</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <section>
    <div class ="musico">
    <img class ="musico" src="{{ asset('uploads/images/musico.jpg') }}">
    </div>
    </section>

    <section>
    <div class="map-google">
    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2623.3406713435893!2d2.3213415156754817!3d48.889844379290544!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e66facdd056ea5%3A0x434b9db26f4d1fdc!2sBrasileirinho!5e0!3m2!1spt-PT!2sfr!4v1642522827574!5m2!1spt-PT!2sfr" width="600" height="450" style="border:0;" allowfullscreen="" loading="lazy"></iframe>
    </div>
    </section>

    <section>

{% endblock %}
